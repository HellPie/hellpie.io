{
	"env": {
		"es6": true,
		"node": true
	},

	"extends": "eslint:recommended",

	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 8
	},

	"rules": {

		// General rules
		"no-console": "off",
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"],
		"no-template-curly-in-string": "error",

		// Best Practices
		"class-methods-use-this": "warn",
		"complexity": ["warn", 50],
		"consistent-return": "error",
		"curly": ["error", "multi-line", "consistent"],
		"no-alert": "error",
		"yoda": "warn",

		// Node Config
		"global-require": "warn",
		"no-sync": "warn",

		// Stylistic Issues
		"block-spacing": ["error", "always"],
		"indent": ["error", "tab", {
			"SwitchCase": 1,
			"outerIIFEBody": 0,
			"MemberExpression": 1
		}],
		"object-property-newline": ["error", {"allowMultiplePropertiesPerLine": true}],
		"keyword-spacing": ["error", {"overrides": {
			"if": {"after": false},
			"for": {"after": false},
			"while": {"after": false},
			"catch": {"after": false},
			"switch": {"after": false}
		}}],
		"prefer-const": "error",
		"prefer-template": "warn",
		"prefer-spread": "warn",
		"prefer-rest-params": "warn"
	}
}
